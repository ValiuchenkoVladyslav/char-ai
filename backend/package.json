  "scripts": {
    "dev": "bun run --hot src/main.ts",
    "build": "bun tsc --noEmit && bun build src/main.ts --outfile dist/main.js --target bun",
    "start": "bun run build && bun run dist/main.js",
    "gen:jwks": "bun scripts/gen-jwks.ts",
    "gen:argon-secret": "bun scripts/gen-argon-secret.ts",
