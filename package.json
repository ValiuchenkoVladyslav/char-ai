{
  "name": "char-ai",
  "private": true,
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "dev": "NODE_ENV=development bun run --env-file=.env --filter='*' dev",
    "build": "bun run --env-file=.env --filter='*' build",
    "start": "bun run --env-file=.env --filter='*' start",
    "lint:check": "bun biome check",
    "lint:fix": "bun biome check --write",
    "gen:jwks": "cd backend && bun gen:jwks",
    "gen:argon-secret": "cd backend && bun gen:argon-secret",
    "db:push": "cd backend && drizzle-kit push",
    "db:migrate": "cd backend && drizzle-kit migrate",
    "db:studio": "cd backend && drizzle-kit studio",
    "db:gen": "cd backend && drizzle-kit generate"
  },
  "dependencies": {
    "hono": "^4.8.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "lefthook": "^1.12.2",
    "typescript": "^5.8.3"
  }
}
