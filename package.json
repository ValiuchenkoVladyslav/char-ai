{
  "name": "char-ai",
  "private": true,
  "packageManager": "bun@1.2.20",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "dev": "bun run --filter='*' dev",
    "build": "bun run --filter='*' build",
    "start": "bun run --filter='*' start",
    "lint:check": "bun biome check",
    "lint:fix": "bun biome check --write",
    "gen:hmac-secret": "cd backend && bun gen:hmac-secret",
    "db:push": "cd backend && bun db:push",
    "db:migrate": "cd backend && bun db:migrate",
    "db:studio": "cd backend && bun db:studio",
    "db:gen": "cd backend && bun db:gen"
  },
  "dependencies": {
    "hono": "^4.9.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "lefthook": "^1.12.2",
    "typescript": "^5.8.3"
  }
}
